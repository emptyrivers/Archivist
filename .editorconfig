root = true

[*]
indent_style = tab
indent_size = 3
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[.luacheckrc]
indent_style = tab
indent_size = 4

[.github/workflows/*]
end_of_line = lf
indent_style = space
indent_size = 2

[.pkgmeta]
end_of_line = lf
